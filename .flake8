[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .tox,
    terraform

# Error codes to ignore:
# E203 - whitespace before ':'
# E501 - line too long (handled by black)
# W503 - line break before binary operator
ignore = E203,E501,W503

# Complexity
max-complexity = 10

# Enable specific checks
select = E,W,F,C
